rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /jobs/{jobId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.clientUid == request.auth.uid ||
        get(/databases/$(database)/documents/providers/$(request.auth.uid)).data.subscribed == true
      );
      allow update, delete: if false;
    }
    match /providers/{providerId} {
      allow read, write: if request.auth != null && request.auth.uid == providerId;
    }
    match /clients/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == clientId;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
